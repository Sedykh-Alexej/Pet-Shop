      d:DesignHeight="450" d:DesignWidth="800"
      Title="Stylee">

    <Grid>
        <Image Source="Resources/Turquoise-Dogs-and-Paw-Print-Cute-Zoom-Virtual-Background.png" Stretch="Fill"></Image>
        <Button Content="Оранжевый стиль" Style="{DynamicResource ButtonStyle}" Margin="474,180,67,220" Height="50" Width="259" Click="OStylee"></Button>
        <Button Content="Фиолетовый стиль" Style="{DynamicResource ButtonStyle}" Margin="76,180,465,220" Height="50" Width="259" Click="FStylee" RenderTransformOrigin="0.253,1.353"></Button>
        <Button Content="Выход" Style="{DynamicResource ButtonStyle}" Margin="266,322,275,78" Height="50" Width="259" Click="Exit"></Button>
