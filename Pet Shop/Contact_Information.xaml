<Page x:Class="Pet_Shop.Contact_Information"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pet_Shop"
      mc:Ignorable="d" 
      d:DesignHeight="675" d:DesignWidth="1036"
      Title="Contact_Information">

    <Grid>
        <Image Source="Resources/Turquoise-Dogs-and-Paw-Print-Cute-Zoom-Virtual-Background.png" Stretch="Fill"></Image>
        <TextBlock Text="Ваш адрес:" Style="{DynamicResource CustomFont}" Margin="30,291,750,338" FontSize="40"></TextBlock>
        <TextBlock  Text="Ваш номер телефона:" Style="{DynamicResource CustomFont}" Margin="30,403,393,195" Height="77" Width="613" FontSize="40"></TextBlock>
        <TextBox Text="{Binding Адрес}"  x:Name="адрес" Margin="619,291,89,338"/>
        <TextBox Text="{Binding Телефон}"  x:Name="телефон" Margin="619,403,89,218"></TextBox>


        <Button Content="Сохранить" Name="BtnSave" Click="BtnSave_Click" Style="{DynamicResource ButtonStyle}" Margin="247,546,587,58" Height="71" Width="202"/>
        <Button Content="Отмена"  Click="Back" Style="{DynamicResource ButtonStyle}" Margin="541,546,293,58" Height="71" Width="202"/>
    </Grid>
</Page>
