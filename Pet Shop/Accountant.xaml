        <Button Content="Офомить поставку"  Style="{DynamicResource ButtonStyle}" Margin="380,352,343,273" Width="313" Height="50" Click="Post"></Button>
        <Button Content="Калькулятор"  Style="{DynamicResource ButtonStyle}" Margin="27,198,766,427" Width="243" Height="50" Click="Calculator"></Button>
        <Button Content="Ревизия животных"  Style="{DynamicResource ButtonStyle}"  Margin="380,452,343,173" Width="313" Height="50" Click="AnimalsRev"></Button>
        <Button Content="Выйти из учётной записи" Click="Exit" Style="{DynamicResource ButtonStyle}" Margin="380,552,343,73" Height="50" Width="313"></Button>
        <Button Content="Поставщики"  Style="{DynamicResource ButtonStyle}" Margin="380,270,343,355" Width="313" Height="50" Click="Postav"/>
